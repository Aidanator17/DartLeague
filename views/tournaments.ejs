<h1>Tournaments</h1>
<p>Drinking and gambling without leaving your house. The perfect sport.</p>
<% if (currentuser.role=='admin' ){ %>
    <a href="/createtourney" class="btn btn-info">Create Tournament</a><br><br>
    <% } %>
        <% for (i in tournaments){ %>
            <% if (tournaments[i].active==true){ %>
                <a href=<%="/tournaments/" + tournaments[i].id %>><%= tournaments[i].title %></a><br>
                <% }} %>

                    <% if (currentuser.role=="admin" ) { %>
                        <br>
                        <p>Not active:</p>
                        <% for (i in tournaments){ %>
                            <% if (tournaments[i].active==false){ %>
                                <a href=<%="/tournaments/" + tournaments[i].id %>><%= tournaments[i].title %></a><br>
                                <% }}} %>